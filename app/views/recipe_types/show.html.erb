<% if @recipe_type.recipes.length == 0 %>
  <h3><%= "Nenhuma receita encontrada para: #{@recipe_type.name}" %></h3>
<% else %>
  <h1><%= "Todas as receitas na categoria #{@recipe_type.name}" %></h1>
  <div class='card-deck'>
  <%= render partial: 'shared/recipe', collection: @recipe_type.recipes.where({status: [:approved]}) %>
  </div>
<% end %>

<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>